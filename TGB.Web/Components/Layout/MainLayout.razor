@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="d-flex-column">
        <div class="top-row px-4 bg-dark">
            <a class="link-light" href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <div class="flex-fill">
            <article class="content px-4">
                @Body
            </article>
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
